        <tr>
            <th data-field="id">Essen</th>
            <th data-field="id">Preise</th>
        </tr>
    </thead>

    <tbody>
    {{#each foods.today}}
        <tr>
            <td>{{name}}</td>
            <td>{{price}}</td>
        </tr>
    {{/each}}
        <tr>
            <td><i>Morgen / Montag:</i></td>
            <td></td>
        </tr>
    {{#each foods.tomorrow}}
        <tr>
            <td>{{name}}</td>
            <td>{{price}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>
